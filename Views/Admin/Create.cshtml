
@model OnlineBookStore.ViewModels.BookViewModel



@{
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Book Details</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">     
                <div class="col-md-6">
                    <div class="form-group">
                    <label >Book Name</label>
                        <input asp-for="BookName" class="form-control" />
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BookPicture" class="control-label">Upload Book Image</label>
                        <div class="custom-file">
                            <input asp-for="BookPicture"  class="custom-file-input"  onchange="document.getElementById('BookPictureprev').src=window.URL.createObjectURL(this.files[0])" />
                           
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="BookPicture" class="text-danger"></span>
                        <img id="BookPictureprev" src="" alt="Book Image" width="100" height="100" style="border: 1px ; margin-top: 50px;margin-left: 50px;"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                       <select asp-for="Genre" class ="form-control" >
                      <option >Fiction</option>
                      <option >Non-Fiction</option>
                       </select>
                       
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label >Supplier </label>
                    <select asp-for="SupId" class ="form-control" asp-items="ViewBag.SupId"></select>
                        <span asp-validation-for="SupId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Edition" class="control-label"></label>
                        <input asp-for="Edition" class="form-control" />
                        <span asp-validation-for="Edition" class="text-danger"></span>
                    </div>
                </div>
            </div>

                        <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        <input asp-for="Stock" type="number" min="0" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
            </div>    
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}